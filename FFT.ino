short vect(short r, short i)
{
  long square;
  long place;
  short root;

  square = (r*r) + (i*i);
  place = 0x40000000;
  root = 0;

  if (square >= 0) 
  {
    while (place > square) place = place >> 2;

    while (place)
    {
      if (square >= root + place)
      {
        square -= root + place;
        root += place * 2;
      }
      root = root >> 1;
      place = place >> 2;
    }
  }
  return (short)root;
}
